<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Performance Guaranty Tree View -->
        <record id="view_performance_guaranty_tree" model="ir.ui.view">
            <field name="name">contract.performance.guaranty.tree</field>
            <field name="model">contract.performance.guaranty</field>
            <field name="arch" type="xml">
                <list string="Performance Guaranties">
                    <field name="name"/>
                    <field name="contract_number"/>
                    <field name="contract_id"/>
                    <field name="performance_guaranty_type"/>
                    <field name="performance_guaranty_provider"/>
                    <field name="performance_guaranty_amount"/>
                    <field name="issue_date"/>
                    <field name="expiry_date"/>
                    <field name="status" decoration-success="status == 'active'" 
                           decoration-danger="status == 'expired'"
                           decoration-muted="status in ['released', 'claimed']"/>
                    <field name="days_to_expiry" decoration-danger="days_to_expiry &lt; 0"/>
                </list>
            </field>
        </record>

        <!-- Performance Guaranty Form View -->
        <record id="view_performance_guaranty_form" model="ir.ui.view">
            <field name="name">contract.performance.guaranty.form</field>
            <field name="model">contract.performance.guaranty</field>
            <field name="arch" type="xml">
                <form string="Performance Guaranty">
                    <header>
                        <button name="action_mark_released" string="Mark as Released" type="object" 
                                class="btn-secondary" invisible="status in ['released', 'claimed']"/>
                        <button name="action_mark_claimed" string="Mark as Claimed" type="object" 
                                class="btn-danger" invisible="status in ['released', 'claimed']"/>
                        <field name="status" widget="statusbar" statusbar_visible="active,expired,released,claimed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_contract" string="Contract" type="object" class="oe_stat_button" icon="fa-file-text-o">
                                <field string="Contract" name="contract_number"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Performance Guaranty Name/Reference"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Contract Information" readonly="1">
                                <field name="contract_id" readonly="1"/>
                                <field name="contract_number"/>
                                <field name="contract_name"/>
                                <field name="contract_manager_id"/>
                            </group>
                            <group string="Amount &amp; Dates">
                                <field name="currency_id"/>
                                <field name="performance_guaranty_amount"/>
                                <field name="issue_date"/>
                                <field name="expiry_date"/>
                                <field name="status" readonly="1"/>
                                <field name="days_to_expiry" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Alerts &amp; Notifications">
                                <field name="alert_days_before"/>
                                <field name="alert_sent" readonly="1"/>
                                <field name="last_alert_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Performance Guaranty Details">
                                <field name="performance_guaranty_type"/>
                                <field name="performance_guaranty_provider"/>
                            </group>
                            <group string="Document">
                                <field name="performance_guaranty_document" filename="performance_guaranty_document_name" widget="binary"/>
                                <field name="performance_guaranty_document_name"/>
                                <button name="action_download_document" string="Download Document" 
                                        type="object" class="btn-primary" 
                                        invisible="not performance_guaranty_document"/>
                            </group>
                        </group>
                        <group>
                            <group string="Notes">
                                <field name="notes" nolabel="1" placeholder="Enter any additional notes..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Performance Guaranty Search View -->
        <record id="view_performance_guaranty_search" model="ir.ui.view">
            <field name="name">contract.performance.guaranty.search</field>
            <field name="model">contract.performance.guaranty</field>
            <field name="arch" type="xml">
                <search string="Search Performance Guaranties">
                    <field name="name"/>
                    <field name="contract_number"/>
                    <field name="contract_id"/>
                    <field name="performance_guaranty_type"/>
                    <field name="performance_guaranty_provider"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                    <filter string="Released" name="released" domain="[('status', '=', 'released')]"/>
                    <filter string="Claimed" name="claimed" domain="[('status', '=', 'claimed')]"/>
                    <filter string="Expiring Soon" name="expiring_soon" domain="[('days_to_expiry', '&lt;=', 30), ('days_to_expiry', '&gt;', 0)]"/>
                    <filter string="Overdue" name="overdue" domain="[('days_to_expiry', '&lt;', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Contract" name="group_contract" context="{'group_by': 'contract_id'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'performance_guaranty_type'}"/>
                        <filter string="Provider" name="group_provider" context="{'group_by': 'performance_guaranty_provider'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Issue Date" name="group_issue_date" context="{'group_by': 'issue_date'}"/>
                        <filter string="Expiry Date" name="group_expiry_date" context="{'group_by': 'expiry_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Performance Guaranty Action -->
        <record id="action_performance_guaranty" model="ir.actions.act_window">
            <field name="name">Performance Guaranties</field>
            <field name="res_model">contract.performance.guaranty</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_performance_guaranty_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first performance guaranty!
                </p>
                <p>
                    Track and manage all performance guaranties for your contracts.
                </p>
            </field>
        </record>
    </data>
</odoo>

