<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Contract Types -->
        <record id="contract_type_contract" model="contract.management.type">
            <field name="name">Contract</field>
            <field name="code">contract</field>
            <field name="sequence">10</field>
        </record>
        <record id="contract_type_agreement" model="contract.management.type">
            <field name="name">Agreement</field>
            <field name="code">agreement</field>
            <field name="sequence">20</field>
        </record>
        <record id="contract_type_mou" model="contract.management.type">
            <field name="name">MoU</field>
            <field name="code">mou</field>
            <field name="sequence">30</field>
        </record>

        <!-- Classifications -->
        <record id="contract_classification_framework" model="contract.management.classification">
            <field name="name">Framework</field>
            <field name="code">framework</field>
            <field name="sequence">10</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_contract'))]"/>
        </record>
        <record id="contract_classification_dps" model="contract.management.classification">
            <field name="name">DPs</field>
            <field name="code">dps</field>
            <field name="sequence">20</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_agreement'))]"/>
        </record>
        <record id="contract_classification_ngos" model="contract.management.classification">
            <field name="name">NGOs</field>
            <field name="code">ngos</field>
            <field name="sequence">30</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_mou'))]"/>
        </record>

        <!-- Categories -->
        <record id="contract_category_services" model="contract.management.category">
            <field name="name">Services</field>
            <field name="code">service</field>
            <field name="sequence">10</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_agreement')), (4, ref('contract_type_mou'))]"/>
        </record>
        <record id="contract_category_goods" model="contract.management.category">
            <field name="name">Goods</field>
            <field name="code">goods</field>
            <field name="sequence">20</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_contract'))]"/>
        </record>
        <record id="contract_category_works" model="contract.management.category">
            <field name="name">Works</field>
            <field name="code">works</field>
            <field name="sequence">30</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_contract'))]"/>
        </record>

        <!-- Departments -->
        <record id="contract_department_ceo" model="contract.management.department">
            <field name="name">CEO</field>
            <field name="code">ceo</field>
            <field name="sequence">10</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_contract')), (4, ref('contract_type_agreement')), (4, ref('contract_type_mou'))]"/>
        </record>
        <record id="contract_department_procurement" model="contract.management.department">
            <field name="name">Procurement</field>
            <field name="code">procurement</field>
            <field name="sequence">20</field>
            <field name="contract_type_ids" eval="[(4, ref('contract_type_contract'))]"/>
        </record>
    </data>
</odoo>

