<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Create custom module category for Approvals -->
        <record id="module_category_approvals" model="ir.module.category">
            <field name="name">Approvals</field>
            <field name="description">Manage approval request access and permissions</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- Finance Team Group -->
        <record id="group_approval_finance_team" model="res.groups">
            <field name="name">Approval: Finance Team</field>
            <field name="comment">Finance team members can view all approved memos for payment processing</field>
            <field name="category_id" ref="module_category_approvals"/>
        </record>
        
        <!-- Management Team Group - For CFO, CSO, CEO Office, CEO -->
        <record id="group_approval_management_team" model="res.groups">
            <field name="name">Approval: Management Team</field>
            <field name="comment">CFO, CSO, CEO Office, and CEO can view all approved memos</field>
            <field name="category_id" ref="module_category_approvals"/>
        </record>
    </data>
</odoo>
