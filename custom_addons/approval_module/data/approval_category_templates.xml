<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Approval Categories with Templates -->

    <!-- Purchase Order Category -->
    <record id="approval_category_purchase_order" model="approval.category">
        <field name="name">Purchase Order Request</field>
        <field name="active">True</field>
    </record>

    <!-- Invoice Payment Category -->
    <record id="approval_category_invoice_payment" model="approval.category">
        <field name="name">Invoice Payment Request</field>
        <field name="active">True</field>
    </record>

    <!-- Other Payment Category -->
    <record id="approval_category_other_payment" model="approval.category">
        <field name="name">Other Payment Request</field>
        <field name="active">True</field>
    </record>

    <!-- Approver templates (common full chain). Adjust/delete in UI as needed. -->
    <record id="tmpl_po_appr_reviewer_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="role">reviewer</field>
        <field name="sequence">10</field>
    </record>
    <record id="tmpl_po_appr_cfo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="role">cfo</field>
        <field name="sequence">20</field>
    </record>
    <record id="tmpl_po_appr_senior_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="role">senior</field>
        <field name="sequence">30</field>
        <field name="po_amount_operator">ge</field>
        <field name="po_amount">10000000</field>
    </record>
    <record id="tmpl_po_appr_ceo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="role">ceo</field>
        <field name="sequence">40</field>
        <field name="po_amount_operator">ge</field>
        <field name="po_amount">10000000</field>
    </record>

    <record id="tmpl_inv_appr_reviewer_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_invoice_payment"/>
        <field name="role">reviewer</field>
        <field name="sequence">10</field>
    </record>
    <record id="tmpl_inv_appr_cfo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_invoice_payment"/>
        <field name="role">cfo</field>
        <field name="sequence">20</field>
    </record>
    <record id="tmpl_inv_appr_senior_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_invoice_payment"/>
        <field name="role">senior</field>
        <field name="sequence">30</field>
        <field name="po_amount_operator">ge</field>
        <field name="po_amount">10000000</field>
    </record>
    <record id="tmpl_inv_appr_ceo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_invoice_payment"/>
        <field name="role">ceo</field>
        <field name="sequence">40</field>
        <field name="po_amount_operator">ge</field>
        <field name="po_amount">10000000</field>
    </record>

    <record id="tmpl_other_appr_reviewer_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_other_payment"/>
        <field name="role">reviewer</field>
        <field name="sequence">10</field>
    </record>
    <record id="tmpl_other_appr_cfo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_other_payment"/>
        <field name="role">cfo</field>
        <field name="sequence">20</field>
    </record>
    <record id="tmpl_other_appr_senior_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_other_payment"/>
        <field name="role">senior</field>
        <field name="sequence">30</field>
    </record>
    <record id="tmpl_other_appr_ceo_tpl" model="approval.category.approver.template">
        <field name="category_id" ref="approval_category_other_payment"/>
        <field name="role">ceo</field>
        <field name="sequence">40</field>
    </record>

    <!-- Checklist templates (minimal baseline; adjust freely in UI) -->
    <!-- Purchase Order -->
    <record id="tmpl_po_chk_contract" model="approval.category.checklist">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="name">Contract</field>
        <field name="is_required">1</field>
    </record>
    <record id="tmpl_po_chk_minutes" model="approval.category.checklist">
        <field name="category_id" ref="approval_category_purchase_order"/>
