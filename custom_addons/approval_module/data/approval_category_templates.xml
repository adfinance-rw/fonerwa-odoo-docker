        <field name="is_required">0</field>
    </record>
    <record id="tmpl_po_chk_other" model="approval.category.checklist">
        <field name="category_id" ref="approval_category_purchase_order"/>
        <field name="name">Other supporting documents</field>
        <field name="is_required">0</field>
