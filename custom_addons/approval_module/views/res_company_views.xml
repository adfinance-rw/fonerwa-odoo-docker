<odoo>
  <record id="view_company_form_inherit_approval_module" model="ir.ui.view">
    <field name="name">res.company.form.inherit.approval.module</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[@name='general_info']" position="inside">
        <group string="Approvals">
          <field name="cfo_id"/>
          <field name="senior_approver_id"/>
          <field name="ceo_id"/>
        </group>
        <group string="Approval Defaults">
          <field name="default_approval_category_id" options="{'no_create': True}"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>

