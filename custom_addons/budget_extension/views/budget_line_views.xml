<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Extend Budget Line List View -->
    <record id="view_budget_line_list_extended" model="ir.ui.view">
        <field name="name">budget.line.list.extended</field>
        <field name="model">budget.line</field>
        <field name="inherit_id" ref="account_budget.view_budget_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='budget_amount']" position="before">
                <field name="budget_activity_id" optional="show"/>
                <field name="budget_activity_code" optional="hide"/>
                <field name="ifmis_mapping_id" optional="show"/>
                <field name="ifmis_code" optional="hide"/>
                <field name="ifmis_category" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Budget Analytic Form View (for budget lines in budget analytic) -->
    <record id="view_budget_analytic_form_extended" model="ir.ui.view">
        <field name="name">budget.analytic.form.extended</field>
        <field name="model">budget.analytic</field>
        <field name="inherit_id" ref="account_budget.view_budget_analytic_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='budget_amount']" position="before">
                <field name="budget_activity_id"/>
                <field name="ifmis_mapping_id"/>
            </xpath>
        </field>
    </record>

    <!-- Create Budget Line Search View with Activity and IFMIS Filters -->
    <record id="view_budget_line_search_extended" model="ir.ui.view">
        <field name="name">budget.line.search.extended</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <search string="Budget Lines">
                <field name="name"/>
                <field name="budget_analytic_id"/>
                <field name="budget_activity_id"/>
                <field name="budget_activity_code"/>
                <field name="ifmis_mapping_id"/>
                <field name="ifmis_code"/>
                
                <!-- Filters -->
                <filter string="Has Budget Activity" name="has_activity"
                        domain="[('budget_activity_id', '!=', False)]"/>
                <filter string="Has IFMIS Mapping" name="has_ifmis"
                        domain="[('ifmis_mapping_id', '!=', False)]"/>
                <filter string="Missing Activity" name="no_activity"
                        domain="[('budget_activity_id', '=', False)]"/>
                <filter string="Missing IFMIS" name="no_ifmis"
                        domain="[('ifmis_mapping_id', '=', False)]"/>
                
                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Budget" name="group_by_budget" context="{'group_by': 'budget_analytic_id'}"/>
                    <filter string="Budgetary Activity" name="group_by_activity" 
                            context="{'group_by': 'budget_activity_id'}"/>
                    <filter string="IFMIS Mapping" name="group_by_ifmis" 
                            context="{'group_by': 'ifmis_mapping_id'}"/>
                    <filter string="IFMIS Category" name="group_by_ifmis_category" 
                            context="{'group_by': 'ifmis_category'}"/>
                    <filter string="Activity Code" name="group_by_activity_code" 
                            context="{'group_by': 'budget_activity_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Budget Lines Action with Enhanced Search -->
    <record id="action_budget_lines_extended" model="ir.actions.act_window">
        <field name="name">Budget Lines Analysis</field>
        <field name="res_model">budget.line</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="view_budget_line_search_extended"/>
        <field name="context">{
            'search_default_group_by_activity': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first budget line!
            </p>
            <p>
                Budget lines with enhanced classification using Budget Activities and IFMIS Mappings.
                Use the grouping options to organize your budget by activity or IFMIS category.
            </p>
        </field>
    </record>

</odoo> 