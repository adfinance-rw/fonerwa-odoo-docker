<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
        <!-- Sample Budget Activities -->
        <record id="budget_activity_admin" model="budget.activity">
            <field name="code">ADM</field>
            <field name="name">Administration</field>
            <field name="description">General administrative activities</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="budget_activity_operations" model="budget.activity">
            <field name="code">OPS</field>
            <field name="name">Operations</field>
            <field name="description">Operational activities and processes</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="budget_activity_maintenance" model="budget.activity">
            <field name="code">MAINT</field>
            <field name="name">Maintenance</field>
            <field name="description">Equipment and facility maintenance</field>
            <field name="sequence">30</field>
        </record>
        
        <!-- Sample IFMIS Mappings -->
        <record id="ifmis_mapping_personnel" model="ifmis.mapping">
            <field name="ifmis_code">21010</field>
            <field name="name">Personnel Expenses</field>
            <field name="ifmis_category">expense</field>
            <field name="description">Salaries, wages and related personnel costs</field>
        </record>
        
        <record id="ifmis_mapping_supplies" model="ifmis.mapping">
            <field name="ifmis_code">22010</field>
            <field name="name">General Supplies</field>
            <field name="ifmis_category">expense</field>
            <field name="description">Office supplies and general materials</field>
        </record>
        
        <record id="ifmis_mapping_equipment" model="ifmis.mapping">
            <field name="ifmis_code">31010</field>
            <field name="name">Equipment Purchase</field>
            <field name="ifmis_category">capital</field>
            <field name="description">Capital expenditure for equipment</field>
        </record>
        
    </data>
</odoo> 