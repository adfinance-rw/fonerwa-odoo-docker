<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_report_wizard" model="ir.ui.view">
        <field name="name">stock.report.wizard.form</field>
        <field name="model">stock.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="location_id"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="category_id"/>
                        <field name="group_by_location"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_report" string="Generate Report" type="object" class="oe_highlight"/>
                    <button name="download_report" string="Download Report" type="object" 
                            invisible="not excel_file"/>
                    <button name="generate_detailed_report" string="Generate Detailed Report" type="object" class="oe_highlight"/>
                    <button name="download_detailed_report" string="Download Detailed Report" type="object"
                            invisible="not detailed_excel_file"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
                <field name="excel_file" invisible="1"/>
                <field name="file_name" invisible="1"/>
                <field name="detailed_excel_file" invisible="1"/>
                <field name="detailed_file_name" invisible="1"/>
            </form>
        </field>
    </record>

    <record id="action_stock_report_wizard" model="ir.actions.act_window">
        <field name="name">Stock Report</field>
        <field name="res_model">stock.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_report_wizard"
              name="Stock Card Report"
              parent="stock.menu_warehouse_report"
              action="action_stock_report_wizard"
              sequence="100"/>
</odoo>