<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rating Scale Form View -->
    <record id="view_hr_appraisal_rating_scale_form" model="ir.ui.view">
        <field name="name">hr.appraisal.rating.scale.form</field>
        <field name="model">hr.appraisal.rating.scale</field>
        <field name="arch" type="xml">
            <form string="Performance Rating Scale">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Exceptional Performer"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="min_score"/>
                            <field name="max_score"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Rating Scale list View -->
    <record id="view_hr_appraisal_rating_scale_list" model="ir.ui.view">
        <field name="name">hr.appraisal.rating.scale.list</field>
        <field name="model">hr.appraisal.rating.scale</field>
        <field name="arch" type="xml">
            <list string="Performance Rating Scales" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="min_score"/>
                <field name="max_score"/>
                <field name="color" widget="color"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Rating Scale Action -->
    <record id="action_hr_appraisal_rating_scale" model="ir.actions.act_window">
        <field name="name">Performance Rating Scales</field>
        <field name="res_model">hr.appraisal.rating.scale</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Performance Rating Scales
            </p>
            <p>
                Define rating scales that will be used to categorize performance scores
                with corresponding colors for visual indication.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_hr_appraisal_rating_scale" 
              name="Rating Scales" 
              parent="hr_appraisal.menu_hr_appraisal_root" 
              action="action_hr_appraisal_rating_scale" 
              groups="hr_appraisal_objectives.group_hr_appraisal"
              sequence="8"/>
</odoo>
