    <field name="name">My Individual Objectives</field>
    <field name="state">code</field>
    <field name="model_id" ref="hr_appraisal.model_hr_appraisal_goal"/>
    <field name="code"><![CDATA[
# Get current user's employee
employee = env['hr.employee'].search([('user_id', '=', env.uid)], limit=1)

action = {
    'name': 'My Individual Objectives',
    'type': 'ir.actions.act_window',
    'res_model': 'hr.appraisal.goal',
    'view_mode': 'kanban,list,form,graph',
