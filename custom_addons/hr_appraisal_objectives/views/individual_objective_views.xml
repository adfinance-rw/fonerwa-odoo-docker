  <!-- Server action to create individual objective for current user from overview -->
  <record id="action_create_my_individual_objective" model="ir.actions.server">
    <field name="name">Create Individual Objective</field>
    <field name="state">code</field>
    <field name="model_id" ref="hr.model_hr_employee"/>
    <field name="binding_model_id" ref="hr.model_hr_employee"/>
    <field name="binding_type">action</field>
    <field name="binding_view_types">kanban,tree</field>
    <field name="code"><![CDATA[
# Get current user's employee
employee = env['hr.employee'].search([('user_id', '=', env.uid)], limit=1)

action = env.ref('hr_appraisal_objectives.action_hr_appraisal_goal').sudo().read()[0]

# Ensure we land on the form in create mode
action['view_mode'] = 'form'
action['views'] = [(False, 'form')]
action['target'] = 'current'

# Merge context, setting defaults for quick creation
actx = action.get('context') or {}
if not isinstance(actx, dict):
    actx = {}

if employee:
    actx['default_employee_id'] = employee.id

# Prevent accidental auto-grouping/filters
actx.pop('search_default_filter_current_fy', None)
action['context'] = actx

action
    ]]></field>
    <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
  </record>

