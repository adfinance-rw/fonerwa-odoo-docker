<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fiscal Year Form View -->
    <record id="view_hr_fiscal_year_form" model="ir.ui.view">
        <field name="name">hr.fiscal.year.form</field>
        <field name="model">hr.fiscal.year</field>
        <field name="arch" type="xml">
            <form string="Fiscal Year">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. FY2023-2024"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Fiscal Year List View -->
    <record id="view_hr_fiscal_year_list" model="ir.ui.view">
        <field name="name">hr.fiscal.year.list</field>
        <field name="model">hr.fiscal.year</field>
        <field name="arch" type="xml">
            <list string="Fiscal Years">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </list>
        </field>
    </record>

    <!-- Fiscal Year Search View -->
    <record id="view_hr_fiscal_year_search" model="ir.ui.view">
        <field name="name">hr.fiscal.year.search</field>
        <field name="model">hr.fiscal.year</field>
        <field name="arch" type="xml">
            <search string="Search Fiscal Years">
                <field name="name"/>
                <group expand="0" string="Group By">
                </group>
            </search>
        </field>
    </record>

    <!-- Fiscal Year Action -->
    <record id="action_hr_fiscal_year" model="ir.actions.act_window">
        <field name="name">Fiscal Years</field>
        <field name="res_model">hr.fiscal.year</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new fiscal year
            </p><p>
                Fiscal years help organize appraisals and objectives by time periods.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_hr_fiscal_year_root"
              name="Fiscal Years"
              parent="hr_appraisal.menu_hr_appraisal_configuration"
              sequence="10"
              action="action_hr_fiscal_year"
              groups="hr_appraisal_objectives.group_hr_appraisal"/>
</odoo>