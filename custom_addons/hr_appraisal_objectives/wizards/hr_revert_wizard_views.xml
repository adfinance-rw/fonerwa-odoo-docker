<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Revert Wizard Form View -->
    <record id="view_hr_appraisal_revert_wizard_form" model="ir.ui.view">
        <field name="name">hr.appraisal.revert.wizard.form</field>
        <field name="model">hr.appraisal.revert.wizard</field>
        <field name="arch" type="xml">
            <form string="Revert Appraisal to Draft">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning!</strong> This action will revert the appraisal to draft state.
                    All assessment progress will be preserved but the workflow will restart.
                </div>
                <group>
                    <field name="appraisal_id" readonly="1"/>
                    <field name="reason" placeholder="Please provide a clear reason for this change..." colspan="2"/>
                </group>
                <footer>
                    <button name="action_revert" type="object" string="Revert to Draft" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
