<odoo>
  <record id="view_hr_appraisal_goal_rejection_wizard" model="ir.ui.view">
    <field name="name">hr.appraisal.goal.rejection.wizard.form</field>
    <field name="model">hr.appraisal.goal.rejection.wizard</field>
    <field name="arch" type="xml">
      <form string="Reject Objective">
        <sheet>
          <group>
            <field name="goal_id" readonly="1"/>
            <field name="rejection_level" readonly="1"/>
            <field name="reason" placeholder="Optionally explain the rejection..."/>
          </group>
        </sheet>
        <footer>
          <button string="Reject" name="action_reject" type="object" class="btn-danger"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>


